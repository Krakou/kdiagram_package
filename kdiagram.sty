\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{kdiagram}[provide kinematic diagram symbols]

\RequirePackage{tikz}

\newcommand\mground[2][]{
    \begin{scope}[shift={(#2)}, scale=0.015]
        \draw[#1, thick] (0,-16) -- (0,16); 
        \foreach \i in {-1,...,2}{
            \draw[#1, thin] (0,8*\i-1) -- (-14, 8*\i-9);
        }
    \end{scope}
}

\newcommand\pinnedSupport[2][]{
    \begin{scope}[shift={(#2)}, scale=0.015]
        \draw[#1,thick] (-16*sqrt 3,-15) -- (0, 0) -- (-16*sqrt 3,15) -- cycle;
        \foreach \i in {-1,...,2}{
            \draw[#1, thin] (-16*sqrt 3,8*\i-1) -- (-16*sqrt 3 - 14, 8*\i-9);
        }
    \end{scope}
}

\newcommand\rollerSupport[2][]{
    \begin{scope}[shift={(#2)}, scale=0.015]
        \draw[#1, thick] (-16*sqrt 3,-15) -- (0, 0) -- (-16*sqrt 3,15) -- cycle;
        \draw[#1, thick] (-16*sqrt 3 - 5,11) circle (4);
        \draw[#1, thick] (-16*sqrt 3 - 5,-11) circle (4);
        \draw[#1, thick] (-16*sqrt 3 - 10,-16) -- (-16*sqrt 3 - 10,16);
        \foreach \i in {-1,...,2}{
            \draw[#1, thin] (-16*sqrt 3 - 10,8*\i-1) -- (-16*sqrt 3 - 24, 8*\i-9);
        }
    \end{scope}
}
